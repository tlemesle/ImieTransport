{% extends 'ImieTransportBundle:Home:index.html.twig' %}
{% block content %}
    <div class="container">
        {% for message in app.session.flashbag.get('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        <h1>Liste des rayons</h1>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for rayon in pagination %}
                <tr>
                    <td>{{ rayon.id }}</td>
                    <td>{{ rayon.libelle }}</td>
                    <td><a type="button" href="{{ path('imie_transport_edit_rayon', {'id': rayon.id }) }}" class="btn btn-primary btn-md"><span class="glyphicon glyphicon-edit"></span></a></td>
                    <td><form method="post" action="{{ path('imie_transport_remove_rayon', {'id': rayon.id }) }}"><button type="submit" class="btn btn-danger btn-md"><span class="glyphicon glyphicon-remove"></span></button></form></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>

{% endblock %}